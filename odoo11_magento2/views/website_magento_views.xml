<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--Tree view of the model website.magento-->
    <record id="website_magento_view_tree" model="ir.ui.view">
        <field name="name">website.magento.view.tree</field>
        <field name="model">website.magento</field>
        <field name="arch" type="xml">
            <tree string="Magento Website">
                <field name="website_name"/>
                <field name="website_code"/>
                <field name="default_store"/>
            </tree>
        </field>
    </record>
    <!--Form view of the model website.magento-->
    <record id="website_magento_view_form" model="ir.ui.view">
        <field name="name">website.magento.view.form</field>
        <field name="model">website.magento</field>
        <field name="arch" type="xml">
            <form string="Magento Website From">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="website_name"/>
                            <field name="website_code"/>
                        </group>
                        <group>
                            <field name="default_store"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!--Windows action for the model website.magento-->
    <record id="website_magento_action" model="ir.actions.act_window">
        <field name="name">Magento Website</field>
        <field name="res_model">website.magento</field>
        <field name="view_mode">kanban,tree,form,pivot</field>
        <field name="view_id" ref="odoo11_magento2.website_magento_view_tree"/>
        <field name="help" type="html">
            <p class="oe_view_no content_create">
                Click to create a Magento Website
            </p>
        </field>
    </record>
</odoo>
