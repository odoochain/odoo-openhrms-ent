<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--Main menu-->
    <menuitem id="magento_main_menu" name="Magento" sequence="1"
              web_icon="odoo11_magento2,static/description/icon.png">
        <!--Dashboard menu-->
        <menuitem id="magento_dashboard" name="Dashboard"
                  action="magento_dashboard_action" sequence="0"/>
        <!--Sales root menu-->
        <menuitem id="magento_sales" name="Sales" sequence="1">
            <!--Sales orders menu-->
            <menuitem id="magento_order" name="Orders"
                      action="magento_order_action" sequence="1"/>
            <!--Menu for the model shipment.shipment-->
            <menuitem id="shipment_shipment_menu" action="shipment_shipment_action"
              name="Shipments" sequence="2"/>
        </menuitem>
        <!--Catalog root menu-->
        <menuitem id="magento_products" name="Catalog" sequence="2">
            <!--Products menu-->
            <menuitem id="magento_product_child" name="Products"
                      action="magento_product_action" sequence="1"/>
            <!--Product variants menu-->
            <menuitem id="magento_product_variants_child" name="Product Variants"
                      action="magento_product_variants_action"
                      groups="product.group_product_variant" sequence="2"/>
            <!--Product categories menu-->
            <menuitem id="magento_categories" name="Categories"
                      action="magento_categories_action" sequence="3"/>
        </menuitem>
        <!--Customers root menu-->
        <menuitem id="magento_customers" name="Customers" sequence="3">
            <!-- Menuitem for the model customer group-->
            <menuitem id="customer_group_menu" name="Customer Groups"
                      action="customer_group_action" sequence="1"/>
            <!--Customers menu-->
            <menuitem id="magento_customer" name="Customers"
                      action="magento_customer_action" sequence="2"/>
        </menuitem>
        <!--Root menu to show the store and website-->
        <menuitem id="magento_stores_menu_root" name="Stores" sequence="4">
            <!--Menu to show the magento websites-->
            <menuitem id="website_magento_menu" action="website_magento_action"
                      name="Magento Website" sequence="1"/>
            <!--Menu to show the magento stores-->
            <menuitem id="stores_magento_menu" action="stores_magento_action"
                      name="Magento Store" sequence="2"/>
        </menuitem>
        <!--Accounting root menu-->
        <menuitem id="magento_accounting" name="Invoices" sequence="5">
            <!--Invoice menu-->
            <menuitem id="magento_invoice" action="magento_invoice_action"
                      name="Invoices" sequence="1"/>
            <!--Credit note menu-->
            <menuitem action="magento_credit_note_action" id="magento_credit_notes"
                      name="Credit Notes" sequence="2"/>
        </menuitem>
        <!--Synchronize root menu-->
        <menuitem id="magento_sync" name="Synchronize" sequence="6">
            <!--Menu to fetch products from Magento-->
            <menuitem id="fetch_products" name="Import/Export Products"
                      action="action_fetch_products" sequence="1"/>
            <!--Menu to fetch customers from Magento-->
            <menuitem id="customers_fetch_wizard_menu" name="Import/Export Customers"
                      action="customers_fetch_wizard_action" sequence="2"/>
            <!--Menu to fetch orders from Magento-->
            <menuitem id="orders_fetch_wizard_menu" name="Import/Export Orders"
                      action="orders_fetch_wizard_action" sequence="3"/>
            <!--Menu to fetch the customer groups from magento-->
            <menuitem id="customer_group_fetch_wizard_menu" name="Import/Export Customer Groups"
                      action="customer_group_fetch_wizard_action" sequence="4"/>
            <!--Menu to fetch the Tax groups from magento-->
            <menuitem id="account_tax_wizard_menu" name="Import/Export Taxes"
                      action="account_tax_wizard_action" sequence="5"/>
            <!--Menu to fetch the Tax groups from magento-->
            <menuitem id="account_tax_group_wizard_menu" name="Import/Export Tax Groups"
                      action="account_tax_group_wizard_action" sequence="6"/>
            <!--Menu to fetch website and fetch store-->
            <menuitem id="website_fetch_wizard_menu" name="Fetch website"
                      action="website_fetch_wizard_action" sequence="7"/>
            <!--Menu to fetch shipments-->
            <menuitem id="shipment_fetch_wizard_menu" name="Fetch Shipments"
                      action="shipment_fetch_wizard_action" sequence="8"/>
            <!--Menu to fetch the credit notes-->
            <menuitem id="credit_notes_fetch_wizard_menu" name="Fetch Credit Notes"
                      action="credit_notes_fetch_wizard_action" sequence="9"/>
        </menuitem>
        <!--Configuration root menu-->
        <menuitem id="magento_configuration" name="Configuration" sequence="7">
            <!--Settings menu-->
            <menuitem id="magento_configuration_settings" name="Settings"
                      action="magento_settings_action"
                      groups="group_magento_manager" sequence="1"/>
            <!--Products root in configuration menu-->
            <menuitem id="magento_configuration_product" name="Products" sequence="2">
                <!--Product attribute menu-->
                <menuitem id="magento_product_attribute" name="Attributes"
                          action="magento_product_attribute_action" sequence="1"/>
            </menuitem>
            <!--Accounting configuration root menu-->
            <menuitem id="magento_accounting_configurations" name="Accounting" sequence="3">
                <!--Tax Group menu-->
                <menuitem id="magento_tax_groups" name="Tax Groups"
                          action="magento_taxes_group_action" sequence="1"/>
                <!--Taxes menu-->
                <menuitem id="magento_taxes" name="Taxes"
                          action="magento_taxes_action" sequence="2"/>
            </menuitem>
        </menuitem>
    </menuitem>
</odoo>
