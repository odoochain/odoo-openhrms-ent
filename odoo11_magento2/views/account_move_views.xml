<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Magento account move action-->
    <record id="magento_invoice_action" model="ir.actions.act_window">
        <field name="name">Invoices</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" ref="account.view_invoice_tree"/>
        <field name="domain">[('move_type', '!=', 'out_refund'),
            ('magento','=','True')]
        </field>
        <field name="context">{'default_move_type': 'out_invoice'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a customer invoice
            </p>
        </field>
    </record>
    <!--Magento credit note action-->
    <record id="magento_credit_note_action" model="ir.actions.act_window">
        <field name="name">Credit Notes</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" ref="account.view_invoice_tree"/>
        <field name="domain">[('move_type', '=', 'out_refund'),
            ('magento','=','True')]
        </field>
        <field name="context">{'default_move_type': 'out_refund'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a credit note
            </p>
            <p>
                Note that the easiest way to create a credit note is to do
                it directly
                from the customer invoice.
            </p>
        </field>
    </record>
</odoo>
