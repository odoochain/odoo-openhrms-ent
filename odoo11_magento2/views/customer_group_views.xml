<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--Tree view of the model customer.group-->
    <record id="customer_group_view_tree" model="ir.ui.view">
        <field name="name">customer.group.view.tree</field>
        <field name="model">customer.group</field>
        <field name="arch" type="xml">
            <tree string="Customer Groups" editable="bottom">
                <field name="group_id" column_invisible="True"/>
                <field name="group" required="1"/>
                <field name="tax_class" readonly="1"/>
            </tree>
        </field>
    </record>
    <!--Windows action for the model customer.group-->
    <record id="customer_group_action" model="ir.actions.act_window">
        <field name="name">Customer Groups</field>
        <field name="res_model">customer.group</field>
        <field name="view_mode">kanban,tree,pivot</field>
        <field name="view_id" ref="odoo11_magento2.customer_group_view_tree"/>
        <field name="help" type="html">
            <p class="oe_view_no content_create">
                Click to create a Customer Group.
            </p>
        </field>
    </record>
</odoo>
