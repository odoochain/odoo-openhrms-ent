<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--Tree view of the model shipment.shipment-->
    <record id="shipment_shipment_view_tree" model="ir.ui.view">
        <field name="name">shipment.shipment.view.tree</field>
        <field name="model">shipment.shipment</field>
        <field name="arch" type="xml">
            <tree string="Magento Shipment">
                <field name="shipment"/>
                <field name="ship_date"/>
                <field name="order_id"/>
                <field name="ship_to_name"/>
                <field name="total_quantity"/>
                <field name="related_so_id"/>
                <field name="state" decoration-success="state == 'shipped'"
                       widget="badge"/>
            </tree>
        </field>
    </record>
    <!--Form view of the model shipment.shipment-->
    <record id="shipment_shipment_view_form" model="ir.ui.view">
        <field name="name">shipment.shipment.view.form</field>
        <field name="model">shipment.shipment</field>
        <field name="arch" type="xml">
            <form string="Magento Shipment From">
                <header>
                    <field name="state" widget="statusbar"
                           statusbar_visible="shipped,cancel"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="shipment"
                                   readonly="state == 'cancel'"/>
                            <field name="order_id"
                                   readonly="state == 'cancel'"/>
                            <field name="total_quantity"
                                   readonly="state == 'cancel'"/>
                        </group>
                        <group>
                            <field name="ship_date"
                                   readonly="state == 'cancel'"/>
                            <field name="ship_to_name"
                                   readonly="state == 'cancel'"/>
                            <field name="related_so_id"
                                   readonly="state == 'cancel'"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!--Windows action of the model shipment.shipment-->
    <record id="shipment_shipment_action" model="ir.actions.act_window">
        <field name="name">Magento Shipment</field>
        <field name="res_model">shipment.shipment</field>
        <field name="view_mode">kanban,tree,form,pivot</field>
        <field name="view_id"
               ref="odoo11_magento2.shipment_shipment_view_tree"/>
        <field name="help" type="html">
            <p class="oe_view_no content_create">
                Click to create a Magento Shipment
            </p>
        </field>
    </record>
</odoo>
