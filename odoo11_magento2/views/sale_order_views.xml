<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--Inherited sale order view form-->
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit.odoo11.magento2</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field name="magento_id" readonly="1"/>
                <field name="magento_status" readonly="1"/>
            </field>
        </field>
    </record>
    <!--Inherited quotation view tree with onboarding-->
    <record id="view_quotation_tree_with_onboarding" model="ir.ui.view">
        <field name="name">
            sale.order.view.tree.quotation.with.onboarding.inherit.odoo11.magento2
        </field>
        <field name="model">sale.order</field>
        <field name="inherit_id"
               ref="sale.view_quotation_tree_with_onboarding"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="magento_id"/>
            </xpath>
        </field>
    </record>
    <!--Inherited tree view of the model sale.order-->
    <record id="view_order_tree" model="ir.ui.view">
        <field name="name">sale.order.view.tree.inherit.odoo11.magento2</field>
        <field name="model">sale.order</field>
        <field name="priority">2</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="magento_id"/>
            </xpath>
            <xpath expr="//field[@name='invoice_status']" position="after">
                <field name="magento_status"/>
            </xpath>
        </field>
    </record>
    <!--Magento sale order action-->
    <record id="magento_order_action" model="ir.actions.act_window">
        <field name="name">Orders</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="view_id"
               ref="sale.view_quotation_tree_with_onboarding"/>
        <field name="domain">[('magento','=','True')]</field>
        <field name="help" type="html">
            <p class="oe_view_no content_create">
                Click to create an Order.
            </p>
        </field>
    </record>
</odoo>
