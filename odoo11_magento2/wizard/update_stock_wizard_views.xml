<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--Form view of the model update.stock.wizard-->
    <record id="update_stock_wizard_view_form" model="ir.ui.view">
        <field name="name">update.stock.wizard.view.form</field>
        <field name="model">update.stock.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="fetch_type" required="1"/>
                        </group>
                    </group>
                    <p>The operation may take some time to complete. It depends
                        on the number of records.
                        Please wait patiently.
                    </p>
                    <footer>
                        <button string='Update' name="update_stock_item"
                                type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default"
                                special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    <!--Action tp updated stock price from product product model-->
    <act_window
            id="update_stock_from_magento1"
            res_model="update.stock.wizard"
            binding_model="product.product"
            target="new"
            view_mode="form"
            name="Update Stock &amp; Price"/>
    <!--Action tp updated stock price from product template model-->
    <act_window
            id="update_stock_from_magento2"
            res_model="update.stock.wizard"
            binding_model="product.template"
            target="new"
            view_mode="form"
            name="Update Stock &amp; Price"/>
</odoo>
