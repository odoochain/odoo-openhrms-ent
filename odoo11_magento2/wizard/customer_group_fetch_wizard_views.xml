<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--Form view of the model customer_group.fetch.wizard-->
    <record id="customer_group_fetch_wizard_view_form" model="ir.ui.view">
        <field name="name">customer_group.fetch.wizard.view.form</field>
        <field name="model">customer_group.fetch.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <p>The operation may take some time to complete. It depends
                        on the number of records.
                        Please wait patiently.
                    </p>
                    <footer>
                        <button string='Fetch Customer Groups'
                                name="fetch_customer_group"
                                type="object" class="btn-primary"/>
                        <button string='Export Customer Groups'
                                name="export_customer_groups"
                                type="object" class="btn-secondary"/>
                        <button string="Cancel" class="btn-default"
                                special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    <!--Windows action for the model customer_group.fetch.wizard-->
    <record id="customer_group_fetch_wizard_action"
            model="ir.actions.act_window">
        <field name="name">Fetch Customers Groups</field>
        <field name="res_model">customer_group.fetch.wizard</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
        <field name="view_ids"
               eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('customer_group_fetch_wizard_view_form')})
                          ]"
        />
    </record>
</odoo>
