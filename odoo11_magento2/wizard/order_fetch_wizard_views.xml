<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--Form view of the mode order.fetch.wizard-->
    <record id="orders_fetch_wizard_view_form" model="ir.ui.view">
        <field name="name">order.fetch.wizard.view.form</field>
        <field name="model">order.fetch.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <p>The operation may take some time to complete. It depends
                        on the number of records.
                        Please wait patiently.
                    </p>
                    <footer>
                        <button string='Fetch Orders' name="fetch_orders"
                                type="object" class="btn-primary"/>
                        <button string='Export Orders' name="export_orders"
                                type="object" class="btn-secondary"/>
                        <button string="Cancel" class="btn-default"
                                special="cancel"/>

                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    <!--Windows action of the model order.fetch.wizard-->
    <record id="orders_fetch_wizard_action" model="ir.actions.act_window">
        <field name="name">Fetch Orders</field>
        <field name="res_model">order.fetch.wizard</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
        <field name="view_ids"
               eval="[(5, 0, 0),
               (0, 0, {'view_mode': 'form', 'view_id': ref('orders_fetch_wizard_view_form')})]"/>
    </record>
</odoo>
