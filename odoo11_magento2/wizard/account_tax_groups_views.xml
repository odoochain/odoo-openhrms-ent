<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--Form view of the model tax group wizard-->
    <record id="account_tax_group_wizard_view_form" model="ir.ui.view">
        <field name="name">account.tax.group.wizard.view.form</field>
        <field name="model">account.tax.group.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <p>The operation may take some time to complete. It depends
                        on the number of records.
                        Please wait patiently.
                    </p>
                    <footer>
                        <button string='Import Tax Group' name="import_tax_group"
                                type="object" class="btn-primary"/>
                        <button string='Export Tax Group' name="export_tax_group"
                                type="object" class="btn-secondary"/>
                        <button string="Cancel" class="btn-default"
                                special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    <!--Windows action for the model account.tax.group.wizard-->
    <record id="account_tax_group_wizard_action" model="ir.actions.act_window">
        <field name="name">Import/Export Tax Groups</field>
        <field name="res_model">account.tax.group.wizard</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
        <field name="view_ids"
               eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('account_tax_group_wizard_view_form')})
                          ]"
        />
    </record>
</odoo>
