<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
<!-- Template of the Magento Dashboard -->
    <t t-name="Magento_Dashboard">
        <div class="container">
            <div class="button-container">
                <div style="padding: 10px;">
                    <section class="magento_main_section"
                             id="main_section_magento">
                        <div class="row">
                            <div class="col-sm-12 mb-4">
                                <div class="row">
                                    <div class="col-12 col-sm-12 col-md-8">
                                        <h1 class="section-header">Magento Dashboard</h1>
                                    </div>
                                    <div class="col-12 col-sm-12 col-md-4">
                                        <center>
                                        <form class="form-group"
                                              style="border: 2px solid #776eF9">
                                            <select id="dependent_values"
                                                    class="form-control"
                                                    t-on-change="(ev) => this.onChangeDependantValues(ev)">
                                                <option id="this_year"
                                                        value="this_year">This Year</option>
                                                <option id="this_quarter"
                                                        value="this_quarter">This Quarter</option>
                                                <option id="this_month"
                                                        value="this_month"
                                                        selected="">This Month</option>
                                                <option id="this_week"
                                                        value="this_week">This Week</option>
                                            </select>
                                        </form>
                                        </center>
                                    </div>
                                </div>
                                <hr/>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
        <!-- Section of the activity tiles-->
        <t t-name="ManageActivity">
            <section class="dashboard_main_section">
                <div class="activity_dash_card row">
                    <div class="col-sm-4 col-md-3">
                        <div class="activity-dashboard-card activity-my-activity all_activity"
                             id="sale-card" t-on-click="onClickSaleAmount">
                            <div class="product-info">
                                <i class="fa fa-money text-mauve icon"/>
                                <h2 class="product-text">Sale Amount</h2>
                            </div>
                            <div class="product-count">
                                <span class="product-count-value"><t t-esc="state.sale_amount"/></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4 col-md-3">
                        <div class="activity-dashboard-card activity-my-activity all_activity"
                             id="invoiced-card" t-on-click="onClickTotalInvoice">
                            <div class="product-info">
                                <i class="fa fa-money text-mauve icon"/>
                                <h2 class="product-text">Total Invoiced</h2>
                            </div>
                            <div class="product-count">
                                <span class="product-count-value"><t t-esc="state.total_invoiced"/></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4 col-md-3">
                        <div class="activity-dashboard-card activity-my-activity all_activity"
                             id="shipment-card" t-on-click="onClickMyShipment">
                            <div class="product-info">
                                <i class="fa fa-truck text-mauve icon"/>
                                <h2 class="product-text">My Shipments</h2>
                            </div>
                            <div class="product-count">
                                <span class="product-count-value"><t t-esc="state.my_shipments"/></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4 col-md-3">
                        <div class="activity-dashboard-card activity-my-activity all_activity"
                             id="store-card" t-on-click="onClickMyStore">
                            <div class="product-info">
                                <i class="fa fa-shopping-bag text-mauve icon"/>
                                <h2 class="product-text">My Stores</h2>
                            </div>
                            <div class="product-count">
                                <span class="product-count-value"><t t-esc="state.my_store"/></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4 col-md-3">
                        <div class="activity-dashboard-card activity-my-activity all_activity"
                             id="amount-due-card" t-on-click="onClickAmountDue">
                            <div class="product-info">
                                <i class="fa fa-money text-mauve icon"/>
                                <h2 class="product-text">Amount Due</h2>
                            </div>
                            <div class="product-count">
                                <span class="product-count-value"><t t-esc="state.amount_due"/></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4 col-md-3">
                        <div class="activity-dashboard-card activity-my-activity all_activity"
                             id="credit-note-card"
                             t-on-click="onClickTotalCreditNote">
                            <div class="product-info">
                                <i class="fa fa-money text-mauve icon"/>
                                <h2 class="product-text">Total Credit Notes</h2>
                            </div>
                            <div class="product-count">
                                <span class="product-count-value"><t t-esc="state.credit_note_total"/></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4 col-md-3">
                        <div class="activity-dashboard-card activity-my-activity all_activity"
                             id="customer-card" t-on-click="onClickCustomer">
                            <div class="product-info">
                                <i class="fa fa-user text-mauve icon"/>
                                <h2 class="product-text">Customers</h2>
                            </div>
                            <div class="product-count">
                                <span class="product-count-value"><t t-esc="state.customer_count"/></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4 col-md-3">
                        <div class="activity-dashboard-card activity-my-activity all_activity"
                             id="product-card" t-on-click="onClickProduct">
                            <div class="product-info">
                                <i class="fa fa-archive icon"/>
                                <h2 class="product-text">Products</h2>
                            </div>
                            <div class="product-count">
                                <span class="product-count-value"><t t-esc="state.product_count"/></span>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </t>
        <div class="row mt-4" style="padding: 20px;">
            <div class="sales_graph col-12 col-sm-12 col-md-4"
                 style="padding:10px; background-color: White;
                        margin-top: -15px; margin-left: 12px;
                        border-radius: 10px; box-shadow: 1px 0px 4px;">
                <div class="sales_count_graph"
                     style="margin: 15px;">
                    <div class="chart-container">
                        <h3 style="font-size: 1.5em;">Sales</h3>
                        <hr/>
                        <form class="form-group col-6">
                            <select id="total_sales"
                                    class="form-control"
                                    style="width: 170 px;"
                                    t-on-change="(ev) => this.onChangeTotalSale(ev)">
                                <option id="sales_today"
                                        value="sales_today">Today</option>
                                <option id="sales_7"
                                        value="sales_7">Last 7 Days</option>
                            </select>
                            <br/>
                            <h3 id="total_today"/>
                            <h3 id="total_days_7"/>
                        </form>
                        <div class="chart">
                            <canvas id="canvas"
                                    t-ref="total_sales_chart"
                                    width="400"
                                    height="400"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="growth_chart col-12 col-sm-12 col-md-8"
                 style="width: 1204px; margin-top: -15px;">
                <div class="growth_chart_div"
                     style="padding:10px; background-color: White;
                            border-radius: 10px; box-shadow: 1px 0px 4px;">
                    <div class="chart-container" style="margin: 15px;">
                        <h3 style="font-size: 1.5em;">Annual Sales</h3>
                        <h3 id="total_year">
                        </h3>
                        <hr/>
                        <div class="chart">
                            <canvas id="canvas_line"
                                    t-ref="annual_sales_chart"
                                    width="800"
                                    height="455"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-4" style="padding: 20px;">
            <div class="product_pi col-12 col-sm-12 col-md-4"
                 style="padding:10px; background-color: White;
                        margin-top: -15px; margin-left: 12px;
                        border-radius: 10px; box-shadow: 1px 0px 4px;">
                <div class="product_pi_graph"
                     style="margin: 15px;">
                    <div class="chart-container">
                        <h3 style="font-size: 1.5em;">Product Sales</h3>
                        <hr/>
                        <div class="chart">
                            <canvas id="canvas_pi"
                                    t-ref="product_count_graph"
                                    width="400"
                                    height="400"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="shipment_chart col-12 col-sm-12 col-md-8"
                 style="width: 1200px; margin-top: -15px;">
                <div class="shipment_chart_div"
                     style="padding:10px; background-color: White;
                            border-radius: 10px; box-shadow: 1px 0px 4px;">
                    <div class="chart-container">
                        <h3 style="font-size: 1.5em;">Products Shipped</h3>
                        <hr/>
                        <div class="chart">
                            <canvas id="canvas_shipment"
                                    t-ref="product_shipment_chart"
                                    width="800"
                                    height="420"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
